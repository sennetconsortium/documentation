.clear
  clear both
*
  margin 0
  padding 0
  box-sizing border-box

html 
  font-size 16px
  line-height 22px
  
html, body
  height 100%

body
  p4()
  pos-rel()
  $col-xlgt-grey
  line-height 1.5
  text-size-adjust none
  font-family $font-family

li  
  list-style-position inside

a, a:visited
  color $col-primary-blue
  text-decoration none

a:hover
  text-decoration underline

.hide 
  hide()

details
  margin-top $mgn

ul ~ h1, ul ~ h2, ul ~ h3, ul ~ h4, ul ~ h5, ul ~ h6, table ~ h2, table ~ h3
  margin-top 1rem

[tabindex="0"]:active, [tabindex="0"]:focus, [tabindex="1"]:active, [tabindex="1"]:focus, a:active, a:focus, button:active, button:focus, input:active, input:focus, select:active, select:focus, textarea:active, textarea:focus
  outline: 1px dotted $col-primary-blue

img
  width 100%
  width -webkit-fill-available
  +sm()
    width 100%