.c-documentation
  summary
    background-color $col-cornflower-blue
    color white
    padding 7px
    margin-top 5px
    margin-bottom 5px
  ul, ol
    margin 0 0 15px 30px
  ol
    box-sizing border-box
    list-style decimal
  li
    list-style-position outside
  &--codeUsage
    h3
      p2()
    h4
      p3()
    h5
      p4()