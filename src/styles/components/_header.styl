.c-header
  pos-rel()
  background-color $col-sennet-grey
  border none
  padding-top 6px
  .lg
    +md-max()
      hide()

  +lg()
    height 90px

  +md-max()
    padding 15px 0

  > .c-header__main
      display flex
      flex-wrap inherit
      align-items center
      justify-content space-between

  &__sm
    margin-left 60px
    color white
    +lg()
      hide()

  &__main
    width 90%
    margin auto
    +lg()
      pos-rel()
      container()

  &__menu
    +md-max()
      margin-top 20px
    +lg()
      pos-rel()
      margin-left 40px

  &__logo
    margin-right 50px
    padding-top 0

    img
      pos-abs()
      width 50px
      top 0
      +md-max()
        top 10px
  
  &__search 
    +lg()
      pos-abs()
      right -50px
    input 
      padding 7px 10px
      width auto
      transition all .5s ease 
      opacity 1
      &.is-hidden 
        width 0
        opacity 0
        border 0 
        padding 0
    .list-group 
      pos-abs()
      z-index 1000
      background-color white
      display flex
      flex-direction column
      padding-left 0
      margin-bottom 0
      width 300px
      max-height 400px 
      overflow-y auto
      overflow-x hidden
      border-radius 3px 
      border solid 1px $col-lgt-grey
      opacity 0
      transition .5s ease opacity 
      &.is-active 
        opacity 1
      li 
        margin 0
        border-bottom solid 1px $col-lgt-grey
      a,span
        max-width 280px
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        font-size 14px
        color $col-dk-grey
        padding 5px 10px
        display block
        &:hover
          color $col-primary-blue
      

  li
    p1()
    color white
    +md-max()
      p3()

    &.h2
      px2em(font-size, 26)
      font-weight bold

    a
      color white
      text-decoration none
      &:hover
        color white

  +lg()
    li
        p1()
        list-style none
        display inline-block
        margin-left 15px
        margin-right 15px
        color white
        padding-top

      a
        &:hover
          text-decoration underline

      &:first-child
        margin-left 0



